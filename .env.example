# Ethereum Environment Variables for Timelock Deployment
# Copy this file to .env and fill in your actual values

# Sepolia RPC URL (get from Alchemy, Infura, or other provider)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Private key for deployment (without 0x prefix - will be added by script)
# NEVER commit your real private key to Git!
ETH_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# Recipient address (beneficiary of the timelock)
RECIPIENT_ADDRESS=0xYOUR_RECIPIENT_ADDRESS_HERE

# Secret for timelock (this should match Cardano timelock secret)
# Use the same secret hash as your Cardano timelock
SECRET=0xYOUR_SECRET_HERE

# Etherscan API key for verification (optional)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Contract address (will be set after deployment)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
